<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.bluewagon.ui.main.home.delivery.DeliveryViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
           android:background="@color/colorPrimary"
            android:layout_height="?attr/actionBarSize">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/blackback"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/pending_delivery"
                    android:textColor="@color/white"

                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="@+id/imageView5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.MaterialToolbar>

        <HorizontalScrollView
            android:id="@+id/hScrollViewProduct"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_marginTop="70dp"
            android:scrollbars="none"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tVProductName"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="@string/s_no"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />


                    <TextView
                        android:id="@+id/tVItemCode"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="@string/order_no"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />


                    <TextView
                        android:id="@+id/tVUnit"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="@string/customer"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tVClosingStock"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="@string/address"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tVPurchase"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="@string/contact"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tVMrp"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="@string/sec_contact"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tv_bill_amt"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="@string/bill_amt"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

<!--                    <View-->
<!--                        android:layout_width="@dimen/_1sdp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:background="@color/white" />-->

<!--                    <TextView-->
<!--                        android:id="@+id/tVSales"-->
<!--                        android:layout_width="150dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:gravity="center|start"-->
<!--                        android:text="@string/payment_status"-->
<!--                        android:textAlignment="center"-->
<!--                        android:textColor="@color/white"-->
<!--                        android:textStyle="bold" />-->

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tVWholesale"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="@string/order_status"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tv_rider_Remarks"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="@string/rider_remarks"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tvRemarks"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="@string/remarks"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_report"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>
        </HorizontalScrollView>



<!--        <ProgressBar-->
<!--            android:id="@+id/progressBar4"-->
<!--            android:layout_width="@dimen/loader_size"-->
<!--            android:layout_height="@dimen/loader_size"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:indeterminateDrawable="@drawable/loading_image"-->
