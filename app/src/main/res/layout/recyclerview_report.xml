<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cVDataLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/tv_sno"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="@string/s_no"
            android:textAlignment="center"
            android:textColor="@color/lightBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="@string/order_no"
            android:textAlignment="center"
            android:textColor="@color/lightBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="@string/customer"
            android:textAlignment="center"
            android:textColor="@color/lightBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="@string/address"
            android:textAlignment="center"
            android:textColor="@color/lightBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="@string/contact"
            android:textAlignment="center"
            android:textColor="@color/lightBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_delivery_amt"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="@string/delivery_amt"
            android:textAlignment="center"
            android:textColor="@color/lightBlack"
            android:textSize="14sp"
            android:textStyle="bold" />


        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_bill_amt"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="@string/bill_amt"
            android:textAlignment="center"
            android:textColor="@color/lightBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

<!--        <View-->
<!--            android:layout_width="@dimen/_1sdp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@color/white" />-->

<!--        <com.tiper.MaterialSpinner-->
<!--            android:layout_width="150dp"-->
<!--            style="@style/AppTheme.Widget.Design.TextInputLayout"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:hintTextColor="@color/normal_text_color"-->
