        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <com.tiper.MaterialSpinner
            android:layout_width="150dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.Widget.Design.TextInputLayout"
            app:hintTextColor="@color/normal_text_color"
            android:src="@drawable/ic_selector_drawable"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:id="@+id/tv_order_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView69"
            app:layout_constraintTop_toBottomOf="@+id/textView69"/>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_rider_remarks"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            android:text="@string/add_remarks_here"
            />


        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_remarks"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>